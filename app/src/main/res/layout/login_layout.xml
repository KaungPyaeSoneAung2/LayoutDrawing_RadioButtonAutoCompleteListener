<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="18dp">

    <TextView
        android:id="@+id/tvTopText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="ဝယ်ယူသူ ထည့်မည်"
        android:textSize="25sp"
        android:textColor="@color/black"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ivAddImageButtonn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:fabCustomSize="100dp"
        android:src="@drawable/ic_camera_24"
        app:layout_constraintTop_toBottomOf="@id/tvTopText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:background="@color/bluishblue"
        android:backgroundTint="@color/bluishblue"
        />
    <ImageView
        android:id="@+id/ivQrScanner"
        android:contentDescription="@string/app_name"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_baseline_qr_code_scanner_24"
        app:layout_constraintTop_toTopOf="@id/cvBuyer"
        app:layout_constraintBottom_toBottomOf="@id/cvBuyer"
        app:layout_constraintEnd_toEndOf="@id/cvBuyer"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cvBuyer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        app:startIconDrawable="@drawable/ic_kidsboyicon"
        app:startIconTint="@color/iconTextColor"
        android:layout_marginHorizontal="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintTop_toBottomOf="@id/cvBuyer1"
        app:boxStrokeColor="@color/cornerBlue"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        >
        <AutoCompleteTextView
            android:id="@+id/tvBuyerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ဝယ်ယူသူအမည်"
            android:textColorHint="@color/iconTextColor"
            android:inputType="textPersonName"
            android:completionThreshold="1"
            android:completionHint="@string/app_name"
            android:dropDownAnchor="@id/tvBuyerName"
            android:clickable="true"
            android:focusable="true" />
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvBuyer1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ivAddImageButtonn"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        app:cardCornerRadius="4dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivBuyerName"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:src="@color/bluishblue"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                android:clickable="true"/>
            <AutoCompleteTextView
                android:id="@+id/tvBuyerName1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="ဝယ်ယူသူအမည်"
                android:textSize="16sp"
                android:paddingLeft="15dp"
                android:gravity="center|left"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:background="@color/white"
                android:inputType="textPersonName"
                android:completionThreshold="2"
                android:completionHint="@string/app_name"
                android:clickable="true"
                />
            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@color/black"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toRightOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_ph_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:startIconTint="@color/iconTextColor"
        app:startIconDrawable="@drawable/ic_phone_outline_icon"
        android:layout_marginHorizontal="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintTop_toBottomOf="@id/cvBuyer"
        app:boxStrokeColor="@color/cornerBlue"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_ph_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ဖုန်းနံပါတ်"
            android:textColorHint="@color/iconTextColor"
            android:maxLength="11"
            android:nextFocusDown="@id/et_mail"
            android:inputType="phone"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:startIconDrawable="@drawable/ic_email_icon"
        app:startIconTint="@color/iconTextColor"
        android:layout_marginHorizontal="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeWidth="1dp"
        app:boxStrokeColor="@color/cornerBlue"
        app:layout_constraintTop_toBottomOf="@id/til_ph_no">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="အီးမေးလ် လိပ်စာ"
            android:textColorHint="@color/iconTextColor"
            android:nextFocusDown="@id/ibAddedCustomer"
            android:inputType="textEmailAddress"
            android:importantForAutofill="no" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/ibAddedCustomer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/cornerBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        app:icon="@drawable/ic_save_24"
        app:iconGravity="textStart"
        android:text="ဝယ်ယူသူ ထည့်ပြီးပါပြီ"
        app:cornerRadius="12dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>