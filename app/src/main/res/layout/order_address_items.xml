<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="15dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="10dp" >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">

        <RadioButton
            android:id="@+id/rbTop"
            android:layout_width="27dp"
            android:layout_height="27dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            />
        <Button
            android:id="@+id/tvAddressType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/rbTop"
            android:layout_marginLeft="22dp"
            android:text="အိမ်"
            android:textSize="18sp"
            android:clickable="false"
            android:backgroundTint="@color/red"
            />
        <TextView
            android:id="@+id/tvCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvAddressType"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="left"
            android:paddingLeft="47dp"
            android:text="Aung Pan"
            android:textSize="24sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tvAdressDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvCity"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="left"
            android:paddingLeft="47dp"
            android:text="No.478,Sample Ward, Sample Street"
            android:textSize="18sp"
            android:textColor="@color/black"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvAdressDetail"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="42dp"
            android:src="@drawable/ic_flag"/>
        <TextView
            android:id="@+id/tvNear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvAdressDetail"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="left"
            android:paddingLeft="67dp"
            android:text="Near Pyin Thar Monastery"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:drawableLeft="@color/black"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>